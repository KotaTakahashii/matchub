<%= stylesheet_link_tag "pageedits", :media => "all" %>
<div class="edit">
  <div class="editt">
    <h1>MyPage編集</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    
    <div class="myimage">
      <%= f.label :プロフィール画像 %>
      <%= f.file_field :image %>
    </div>

    <div class="teamname">
      <%= f.label :チーム名 %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="day">
      <%= f.label :活動日 %><br />
      <%= f.text_field :activeday %>
    </div>

    <div class="pl">
      <%= f.label :活動場所 %><br />
      <%= f.text_field :activeplace %>
    </div>

    <div class="achi">
      <%= f.label :戦績 %><br />
      <%= f.text_field :achievement  %>
    </div>

    <div class="insta">
      <%= f.label :インスタアカウント %><br />
      <%= f.text_field :instagram %>
    </div>

    <div class="mailadress">
      <%= f.label :メールアドレス %><br />
      <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  <div class="sonota">
    <div class="pass">
      <%= f.label :password %> <i> 変更しない場合は空白にしておく(最低6文字)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
      <% end %>
    </div>

    <div class="passwordconf">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="currentpass">
      <%= f.label :現在のパスワード %> <i>(変更するには現在のパスワードの確認が必要です)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="pageupdate">
      <%= f.submit "Update" %>
      <% end %>
    </div>


<h3><mark>アカウントを削除する</mark></h3>

<div class="kouta">クリックしてアカウントを削除<%= button_to "削除", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
  </div>