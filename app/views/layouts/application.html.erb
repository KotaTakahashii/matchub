<!DOCTYPE html>
<html>
  <head>
    <title>Matchub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
<div class="wrapper">
 <body>
  <header>
  <div class="header-list2">
  <h1>MatcHub</h1>
  </div>
<div class="header-list">
    <ul>
     <% if user_signed_in? %>
     <ul> 
     <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
     <li><%= link_to "MatcHubとは",recruits_about_path %></li>
     <li><%= link_to "マイページへ", user_path(current_user.id) %></li>
     <li><%= link_to "練習試合を検索",recruits_path %></li>
     <li><%= link_to "新規投稿",new_recruit_path %></li>
     <li><%= link_to "ホーム",recruits_top_path %></li>
     <% else %>
      <li><%= link_to "MatcHubとは",recruits_about_path %></li> 
      <li><%= link_to "新規登録", new_user_registration_path %></li>
      <li><%= link_to "ログイン", new_user_session_path %></li>
      <li><%= link_to "練習試合を検索する",recruits_path %></li>
      <li><%= link_to "新規投稿へ",new_recruit_path %></li>
      <li><%= link_to "ホーム",recruits_top_path %></li>
     <% end %>
    </ul>
  </div>
  <div id="drawer">
	<input id="input" type="checkbox" class="unshown">
	<label id="open" for="input"><span></span></label>
	<label class="unshown" id="close" for="input"></label>
	<div id="menu-content">
  <% if user_signed_in? %>
  <th><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></th>
  <th><%= link_to "Matchubとは",recruits_about_path %></th>
  <th><%= link_to "マイページ", user_path(current_user.id) %></th>
  <th><%= link_to "練習試合を検索する",recruits_path %></th>
  <th><%= link_to "新規投稿へ",new_recruit_path %></th>
  <th><%= link_to "ホーム",recruits_top_path %></th>
  <% else %>
   <%= link_to "MatcHubとは",recruits_about_path %> 
   <%= link_to "新規登録", new_user_registration_path %>
   <%= link_to "ログイン", new_user_session_path %>
   <%= link_to "練習試合を検索する",recruits_path %>
   <%= link_to "新規投稿へ",new_recruit_path %>
   <%= link_to "ホーム",recruits_top_path %>
   <% end %>
 </div>
</div>

  </header>
  
  <main>
   <%= yield %>
  </main>
  <footer>
    <p>Copyright © Kota Takahashi All Rights Reserved.</p>
  </footer>
 </body>
 </div>
</html>